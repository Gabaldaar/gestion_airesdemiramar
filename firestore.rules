rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regla para la colección de sesiones: solo el propietario puede leer/escribir su sesión.
    match /_sessions/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Regla general para todos los demás documentos.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
